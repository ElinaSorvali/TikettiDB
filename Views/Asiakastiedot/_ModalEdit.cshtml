@model TikettiDB.Models.Asiakastiedot

<div class="modal fade" id="ModalATEdit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="bg-img">
                @*Tässä on taustakuva*@
                <div class="modal-header">
                    <h2>Muokkaa asiakastietoja</h2>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Edit", "Asiakastiedot", FormMethod.Post))

                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Asiakastiedot</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.AsiakasID)
                            @Html.HiddenFor(model => model.SijaintiID)
                            @Html.HiddenFor(model => model.Sahkoposti)
                            @*@Html.HiddenFor(model => model.Salasana)*@


                            <div class="form-group">
                                @Html.LabelFor(model => model.Etunimi, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Etunimi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Etunimi, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.Sukunimi, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Sukunimi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Sukunimi, "", new { @class = "text-danger" })
                                </div>
                            </div>




                            <div class="form-group">
                                @Html.LabelFor(model => model.Puhelinnro, "Puhelinnumero", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Puhelinnro, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Puhelinnro, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Osoite", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.Editor("Osoite", new { htmlAttributes = new { @class = "form-control", @value = ViewBag.Osoite } })
                                </div>
                            </div>



                            <div class="form-group">
                                @Html.LabelFor(model => model.SijaintiID, "Postinumero", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("Postinro", null, "Valitse postinumero", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SijaintiID, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            @*<div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Salasana, "Salasana", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Salasana, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Salasana, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>*@

                            <p>
                                <div class="modal-footer">
                                    <div>
                                        @*Formin lähettävä button, joka ei kuitenkaan ole formin sisällä, mutta viittaa formin ID:hen*@
                                        <button type="submit" value="Tallenna" class="btn btn-success"><i class="fas fa-check"></i></button>
                                        @*Kontrollerin kutsu Url.Action -komennolla, jotta peruuttaminen johtaa alkutilanteeseen*@
                                        <a href="@Url.Action("Index", "Asiakastiedot")" class="btn btn-primary"><i class="fas fa-times"></i></a>
                                    </div>
                                </div>
                            </p>
                        </div>



                    }
                </div>
            </div>
        </div>
    </div>
</div>